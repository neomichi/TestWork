        <Button Content="/" HorizontalAlignment="Left" Margin="180,110,0,0" VerticalAlignment="Top" Width="40" Height="40" Name="ButtonDivide"  />
        <Button Content="^" HorizontalAlignment="Left" Margin="180,60,0,0" VerticalAlignment="Top" Width="40" Height="40" Name="ButtonPow" />
        <Button Content="(" HorizontalAlignment="Left" Margin="230,60,0,0" VerticalAlignment="Top" Width="40" Height="40" Name="ButtonBrackedOpen"  />
        <Button Content=")" HorizontalAlignment="Left" Margin="230,110,0,0" VerticalAlignment="Top" Width="40" Height="40" Name="ButtonBrackedClose"  />
        <Button Content="="  HorizontalAlignment="Left" Margin="230,160,0,0" VerticalAlignment="Top" Width="40" Height="140" Name="ButtonEquals"  />
        <Label Content="*знак минуса: _" HorizontalAlignment="Left" Margin="32,318,0,0" VerticalAlignment="Top"/>



